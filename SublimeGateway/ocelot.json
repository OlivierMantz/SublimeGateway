                {
                    "Host": "localhost",
                    "Port": 5092
                }
            ],
            "FileCacheOptions": {
                "TtlSeconds": 30,
                "Region": "usercaching"
            },
            "RateLimitOptions": {
                "ClientWhitelist": [

                ],
                "EnableRateLimiting": true,
                "Period": "5s",
                "PeriodTimespan": 1,
                "Limit": 1
            },
            "UpstreamPathTemplate": "/Users/{id}",
            "UpstreamHttpMethod": [ "Delete" ]
